<%- model_class = Order -%>
<div class="page-header">
  <h1><%=t '.title', :default => Order %></h1>
</div>
<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:customer_name) %></dt>
      <dd><pre class="prettyprint"><%= @order.customer_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:customer_phone) %></dt>
      <dd><pre class="prettyprint"><%= @order.customer_phone %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:customer_address) %></dt>
      <dd><pre class="prettyprint"><%= @order.customer_address %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:restaurant_name) %></dt>
      <dd><pre class="prettyprint"><%= @order.restaurant_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:restaurant_address) %></dt>
      <dd><pre class="prettyprint"><%= @order.restaurant_address %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:status) %></dt>
      <dd><pre class="prettyprint"><%= @order.status %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:driver_name) %></dt>
      <dd><pre class="prettyprint"><%= @order.driver_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:order_details) %></dt>
      <dd><pre class="prettyprint"><%= @order.order_details %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:total_before_fee) %></dt>
      <dd><pre class="prettyprint"><%= @order.total_before_fee %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:total_after_fee) %></dt>
      <dd><pre class="prettyprint"><%= @order.total_after_fee %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:complete) %></dt>
      <dd><pre class="prettyprint"><%= @order.complete %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              orders_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_order_path(@order), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              order_path(@order),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

