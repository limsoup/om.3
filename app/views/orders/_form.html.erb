<%= form_for @order, :html => { :class => ' container-fluid' } do |f| %>
  <div class="form-group row">
  <!-- notes, complete, total_after_fee, total_before_fee -->
    <div class="col-md-4">
      <!-- <div class="row"> -->
        <div class="col-md-12"><h2>Restaurant Info</h2></div>
      <!-- </div>
      <div class="row"> -->
        <div class="col-md-6">
          <%= f.label :restaurant_name, :class => 'control-label' %><br/>
          <%= f.text_field :restaurant_name, :class => 'text-field form-control' %>
        </div>
        <div class="col-md-6">
          <%= f.label :restaurant_address, :class => 'control-label' %><br/>
          <%= f.text_field :restaurant_address, :class => 'text-field form-control' %>
        </div>
      <!-- </div>
      <div class="row"> -->
        <div class="col-md-12">
          <%= f.label :order_details, :class => 'control-label' %><br/>
          <%= f.text_area :order_details, :class => 'text-field form-control', :rows=>"6" %>
        </div>
      <!-- </div> -->
    </div>
    <div class="col-md-4">
      <div class="row">
        <div class="col-md-12"><h2>Customer Info</h2></div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <%= f.label :customer_name, :class => 'control-label' %><br/>
          <%= f.text_field :customer_name, :class => 'text-field form-control' %>
        </div>
        <div class="col-md-6">
          <%= f.label :customer_phone, :class => 'control-label' %><br/>
          <%= f.text_field :customer_phone, :class => 'text-field form-control' %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <%= f.label :customer_address, :class => 'control-label' %><br/>
          <%= f.text_field :customer_address, :class => 'text-field form-control' %>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="row">
        <h2>Other Info</h2>
      </div>
      <div class="row">
        <div class="col-md-12">
          <%= f.label :notes, :class => 'control-label' %></br>
          <%= f.text_area :notes, :class => 'text-field form-control' %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4">
          <%= f.label :total_before_fee, :class => 'control-label' %></br>
          <%= f.number_field :total_before_fee, :class => 'text-field form-control number', :step => 'any' %>
        </div>
        <div class="col-md-4">
          <%= f.label :total_after_fee, :class => 'control-label' %></br>
          <%= f.number_field :total_after_fee, :class => 'text-field form-control number', :step => 'any' %>
        </div>
        <div class="col-md-4">
          <%= f.label :complete, :class => 'control-label' %><br/>
          <%= f.check_box :complete, :class => 'text-field form-control' %>
        </div>
      </div>
    </div>
  </div>

  <div class="form-group row">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  orders_path, :class => 'btn btn-default' %>
    </div>
  </div>


<% end %>
