<%= simple_form_for(@order) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :customer_name %>
    <%= f.input :customer_phone %>
    <%= f.input :customer_address %>
    <%= f.input :restaurant_name %>
    <%= f.input :restaurant_address %>
    <%= f.input :status %>
    <%= f.input :driver_name %>
    <%= f.input :order_details %>
    <%= f.input :total_before_fee %>
    <%= f.input :total_after_fee %>
    <%= f.input :complete %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
