        <div class="col-md-6">
        	<span class="label label-info">Customer Name</span>
          <%#= f.label :customer_name, :class => 'control-label' %><br/>
          <%#= f.text_field :customer_name, :class => 'text-field form-control' %>
          <%= order.customer_name %>
