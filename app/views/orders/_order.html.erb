<div class="row striped">
  <!-- notes, complete, total_after_fee, total_before_fee -->
    <div class="col-md-4">
      <!-- <div class="row"> -->
      <div class="row">
        <div class="col-md-12">
          <h2>Restaurant Info</h2>
          <h2><a class="reveal-copyable-order-info"><span class='glyphicon glyphicon-copy'>&nbsp;</span>Copy Order Info</a> </h2>
        </div>
      </div>
      <div class="row copyable-order-info">
        <div class="col-md-12 well">
          <pre>
            <%= order.restaurant_name %>
            <%= order.restaurant_address %>
            <%= order.customer_address %>
          </pre>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
        	<span class="label label-info"> Restaurant Name </span><br/>
          <%= order.restaurant_name %>
        </div>
        <div class="col-md-6">
        	<span class="label label-info">	Restaurant Address </span><br/>
          <%= order.restaurant_address %><
        </div>
        <div class="col-md-12">
        	<span class="label label-info">Order Details </span><br/>
          <%= simple_format order.order_details %>
        </div>
      </div>
    </div>
    
    <div class="col-md-4">
      <div class="row">
        <div class="col-md-12"><h2>Customer Info</h2>
          <h2><a class="reveal-copyable-customer-info"><span class='glyphicon glyphicon-copy'>&nbsp;</span>Copy Customer Info</a> </h2></div>
      </div>
      <div class="row copyable-customer-info">
        <div class="col-md-12 well">
          <pre><%= order.customer_name %>
            <%= order.customer_phone %>
            <%= order.customer_address %></pre>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
        	<span class="label label-info">Customer Name</span><br/>
          <%= order.customer_name %>
        </div>
        <div class="col-md-6">
        	<span class="label label-info">Customer Phone</span><br/>
          <%= order.customer_phone %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
        	<span class="label label-info">Customer Address</span><br/>
          <%= order.customer_address %>
        </div>
      </div>
    </div>
    
    <form class="col-md-4 quick-change">
      <div class="row">
        <h2>Other Info | <%= link_to 'edit', edit_order_path(order) %></h2>
      </div>
      <div class="row">
        <div class="col-md-12">
        	<span class="label label-info">Order Notes</span></br>
          <%= order.notes %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4">
        	<span class="label label-info">Total Before Fee</span></br>
          <%= order.total_before_fee %>
        </div>
        <div class="col-md-4">
          <span class="label label-info">Total After Fee</span></br>
          <%= order.total_after_fee %>
        </div>
        <div class="col-md-4">
          <span class="label label-info">Order Complete?</span><br/>
          <%= order.complete %>
        </div>
   	  </div>
   	  <div class="row">
   	  	<div class="col-md-12">

   	  	</div>
   	  </div>
    </form>
  </div>
